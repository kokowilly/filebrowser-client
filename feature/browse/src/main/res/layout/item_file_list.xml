<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

  <androidx.appcompat.widget.AppCompatImageView
      android:id="@+id/item_thumbnail"
      android:layout_width="32dp"
      android:layout_height="32dp"
      android:layout_margin="@dimen/vertical_margin"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      tools:src="@tools:sample/avatars" />

  <com.google.android.material.textview.MaterialTextView
      android:id="@+id/item_label"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:layout_marginHorizontal="@dimen/vertical_margin"
      android:lines="1"
      app:layout_constraintBottom_toBottomOf="@id/item_thumbnail"
      app:layout_constraintEnd_toEndOf="parent"
      app:layout_constraintStart_toEndOf="@id/item_thumbnail"
      app:layout_constraintTop_toTopOf="@id/item_thumbnail"
      tools:text="@tools:sample/full_names" />

</androidx.constraintlayout.widget.ConstraintLayout>
